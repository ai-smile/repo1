page{
  height: 100%;
  background-color: #C0CF71;
}
.btn{
  background-color:#FCD265;
  border-radius: 50%;
  position: absolute;
  width:150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 3em;
  color: white;
  z-index: 100;
}
.Btn{
  display: flex;
  position: absolute;
  bottom: 0;
}
.del-main{
  display: flex;
  flex-direction: column;
  position: relative;
  top: 0rpx;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;

}
 .del-top{
  display: flex;
  flex-direction: column;
  background-color:white;
  font-size: 1.3em;
  z-index: 99;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;  box-shadow: 0px 3px 4px #888;
  
}
.content{
  display: flex; 
  flex-direction: row;
  padding:20rpx 0rpx; 
  width: 100%;
  align-items: center;
}
.icon{
  display: flex;
  align-items: center;
  width: 5%;
  margin-right: 10rpx;
}
.txt{
  width: 95%;
}
.con{
  width: 120rpx;
  height: 100%;
  display: flex;
  position: absolute;
  top:0;
  justify-content: center;
  align-items: center;
  z-index: 1;
  color:white;
  font-size: 1.2em;
}
.del-btn{
  right: 20rpx;
  background-color:rgb(149, 156, 247);
  border-top-right-radius:20rpx;
  border-bottom-right-radius:20rpx;
}
.complete-btn{
  right:260rpx;
  background-color:#E51373;
}
.update-btn{
  right:140rpx;
  background-color:rgb(248, 143, 50);
}
.background{
  display: flex;
  z-index:-1;
  position: absolute;
}
.pic{
  display: flex;
  position: absolute;
  bottom: 0px;
  right:0px;
}
.index{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  height: 100%;
}
.date{
  font-size: 30rpx;
  color: #888;
}