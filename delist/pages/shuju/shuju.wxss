
page{
 
  background-color:#C0CF71 ;
}
.tj{
 
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #fff;
  border: 7px solid #fff;
  margin: 7px 8px;
  border-radius: 8px;
  
}
.tj_text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 33%;
  text-align: center;
  font-size: 40rpx;
  color: #C0CF71;
}
.tj_num{
  font-size: 45rpx;
  color: #7fb80e;
}

.picture{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 8px;
  border: 7px solid #fff;
  margin: 14px 8px;
}
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title-left {
  font-size: 34rpx;
  color: #7fb80e;
  margin-bottom: 15rpx;
}
.container {
  padding: 0;
  position: relative;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 700rpx;
  width:100%;
  
}
ec-canvas{
  width: 100%;
  height:100%;
}