page{
  height: 100%;
  width: 100%;
  background-color:#C0CF71;
}
.record{
  display: flex;
  width: 100%;
  flex-direction: column;
  height: 100%;
}
.yuan{
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.top{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 260rpx;
  height: 260rpx;
  background-color: white;
  border: 1px solid white;
  justify-content:center;
  align-items:center;
  border-radius: 50%;
  font-size: 1.5em;
}
.zhi{
  padding: 10rpx 0;
  color: red;
  font-size: 1.5em;
}
.mid{
  display: flex;
  width: 100%;
  border: 1px solid grey;
  font-size: 1.5em;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.option_box{
  position: absolute;
  top: 110rpx;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0; 
  }
.option{
  display: block;
  line-height: 30rpx;
  font-size: 35rpx;
  background: #fff;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: auto;
  padding:10rpx 14rpx;
  overflow: hidden;
  }
.container-text{
  float: left;
  text-align: center;
  font-size: 1.4em;
  white-space: nowrap;
  display: flex;
  flex-direction: column; 
  padding: 0 10rpx;
  }
.container-part1{
  
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  justify-content: space-between;  
  color: #7fb80e;
  align-items: center;
  }