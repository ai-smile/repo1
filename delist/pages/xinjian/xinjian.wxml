<view class="xinjian">
	<image src="cloud://micro-lkzba.6d69-micro-lkzba-1301856164/xinjian-top.png" style="width:100%;height:100rpx;"></image>

	<view class="content">
		<!-- 自动获取焦点foucs="{true}" -->
		<view class="input">
			<textarea class="name" auto-height="true" placeholder="请输入清单内容(支持语音输入)..." contenteditable="true" value='{{name}}' placeholder-style='font-size:40rpx;' maxlength="-1" bindblur="addName"></textarea>

			<view class="xinjian-xiangji" bindtap="uploadImage">
				<image src="cloud://micro-lkzba.6d69-micro-lkzba-1301856164/xinjian-camera.png" style="width:60rpx;height:60rpx;"></image>
			</view>
		</view>
	</view>

	<!-- 事件紧急程度 -->
	<view class="priority">
		<view class="txt">紧急程度：</view>
		<radio-group class="radio-group" bindchange="radioChange">
			<label wx:for="{{radio}}" wx:key="{{index}}">
				<radio value="{{item.va}}" checked="{{item.va == zhcolor}}" disabled="{{num[item.va]?'':'disabled'}}" /> {{item.name}}
			</label>
		</radio-group>
	</view>

