	<view class="sub">
		<view class="submit" bindtap="addData">
			<image src="cloud://micro-lkzba.6d69-micro-lkzba-1301856164/xinjian-addbtn.png" mode="aspectFill" style="height:100rpx;width:300rpx"></image>
		</view>
	</view>

	<!-- 开始语音 弹出语音图标表示正在录音 -->
	<cover-view class="startYuyinImage" wx:if="{{recordState == true}}">
		<cover-image src="cloud://micro-lkzba.6d69-micro-lkzba-1301856164/yuyin.png" mode="aspectFill" style="width:60px;height:60px"></cover-image>
		<cover-view>正在语音</cover-view>
	</cover-view>
	<!-- 语音输入 -->
	<view class="yuyinWrap">
		<view class='btn'>
			<button hover-class="yuyinBtn {{recordState == true ? 'yuyinBtnBg':''}}" bindtouchstart="touchStart" bindtouchend="touchEnd">
				<text wx:if="{{recordState == false}}">
					<text class="cuIcon-voicefill lg text-grey"></text> 按 住 说 话</text>
				<text wx:else>松 开 结 束</text>
			</button>
		</view>
	</view>
