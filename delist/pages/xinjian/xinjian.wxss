page{
  height: 100%;
}
  
.xinjian{
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction:column;
  background-color:#C0CF71;
}
.content{
  display: flex;
  position: relative;
  margin:30rpx 10rpx ;
  border: 2px solid white;
  border-radius: 20rpx;
  box-shadow: 0px 3px 4px #888;
}
.name{
  height: 140rpx!important;
  flex:1;
  font-size: 40rpx;
 
}
.xinjian-xiangji{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 4px;
  right: 10px;
}
.input{
  display: flex;
  flex-direction: row;
  padding: 15rpx 0px 15rpx 15rpx;
  align-items: center;
}
.priority{
  position: relative;
  height: 100rpx;
  display: flex;
  flex-direction:row;
  line-height: 100rpx;
  margin:0 15rpx;
  border-bottom: 1px solid #ddd;
}
.txt{
  font-size: 1.3em;
}

radio::before, checkbox::before {

font-family:"cuIcon";
content:"\e645";
position:absolute;
color:var(--white) !important;
top:50%;
margin-top:-8px;
right:0px;
line-height:16px;
pointer-events:none;

}

radio .wx-radio-input{
   border-radius: 50%;
   width: 32rpx;
   height: 32rpx; 
   border: none;  
  
}

.radio-group label {

  font-size: 28rpx;
  padding: 0 8rpx;
}


.submit{
  display: flex;
}

.sub{
  display: flex;
  justify-content: center;
  margin-top:180rpx;
}
.startYuyinImage{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.yuyinWrap{
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0px;
}
.btn{
  display: flex;
  width: 100%;
  height: 100rpx;
}
button{
  width: 100%;
}
.yuyinBtn{
  width: 100%;
}
.end-date,.start-date{
  display: flex;
  flex-direction: column;
  font-size: 1.3em;
}
.start-date view:nth-child(2){
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
}
.end-date view:nth-child(2){
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
}
.date{
  position: relative;
  display: flex;
  flex-direction: row;
}
.time{
  display: flex;
  height: 120rpx;
  margin: 30rpx 15rpx;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.line{
  width: 105rpx;
  height: 105rpx;
  margin:0 70rpx 30rpx 20rpx;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  transform: rotate(-45deg);
}








