page{
  height: 100%;
  background-color:#C0CF71;
}
.sign{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  
}
.top{
  display: flex;
  width: 100%;
  margin-top: 10rpx;
  justify-content: center;
  align-items: center;
}
.top image{
  width: 80%;
  height: 140rpx;
}

.day i{
  display: flex;
  font-size: 1.3em;
  color: snow;
  margin: 0 8rpx;
}
.txt{
  display: flex;
  height: 100rpx;
  align-items: center;
  font-size: 1.3em;
}
.num{
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px solid snow;
}
.num:nth-child(-n+2){
  border-right: none;
}
.day{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  margin-top:30rpx;
}
.rili{
  margin: 20rpx 20rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
button{
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  font-weight: 700;
  background-color: rgb(253, 128, 42,0.8);
  color: white;
  font-size:1.3em;
}
.sign-hover{
 position: relative;
 top: 5rpx;
 left: 5rpx;
 box-shadow:0px 0px 8px rgba(0, 0, 0, .1) inset; 
}