.rules{
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  align-items: center;
  font-family: "qingchundetiankong";  
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 1.4em;
  color: black;
}
.table {
  border: 0px solid darkgray;
  font-size: 1.2em;
}
.td {

    width:65%;

    justify-content: center;

    text-align: center;

    border-right: 0.4px solid white;
}

.bg-w{
  background: snow; 
}
.bg-g{
  background: #FFDF8E;
}

.th {

  width: 65%;

  justify-content: center;

  background:#C0CF71;

  color: #fff;

  display: flex;

  height: 3rem;

  align-items: center;

  border-right: 0.4px solid white;

}
.tw {

  width: 35%;

  justify-content: center;

  background:#C0CF71;

  color: #fff;

  display: flex;

  height: 3rem;

  align-items: center;

}
.ts {

  width:35%;

  justify-content: center;

  text-align: center;


}
.txt{
  display:inline-flex;
  height: 100rpx;
  font-size: 1.2em;
  color: black;
}
.tr {

  display: flex;

  width: 100%;

  justify-content: center;

  height: 2.8rem;

  align-items: center;

  border-bottom:0.4px solid white;

  color:black;

}
.note{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  color: black;
}
.nt{
  
  height: 50rpx;
  line-height: 50rpx;
  font-size: 1.2em;
  text-align: center;
}
.background{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}