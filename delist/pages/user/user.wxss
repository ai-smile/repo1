/* pages/test/test.wxss */
page{
  background-color: #fff;
}
.userinfo {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  background: #C0CF71;   
  width: 100%; 
  height: 350rpx;
}
.userinfo-btn{  
  margin-top: 50rpx;  
  background: none !important;  
  color: #fff !important;  
  font-size: 40rpx;
}
.userinfo-avatar {  
  width: 180rpx;  
  height: 180rpx;  
  margin: 30rpx;  
  border-radius: 50%;
}
.userinfo-nickname {  
  color: #fff;
  font-size: 1.1em;
}
.list {  
  display: flex;  
  flex-direction: column;  
  align-items: left;
  background-color: #fff;
}
.split {  
  width: 80%;  
  height: 3rpx;  
  margin-left:110rpx;
  background: rgb(219, 217, 217);  
}
.option {      
  display: flex;  
  flex-direction: row;  
  align-items: center;  
  height: 90rpx;
}

.option-image{  
  width: 60rpx;  
  height: 60rpx;  
  margin: 20rpx;
}

.option-text{  
  color: gray;  
  font-size: 40rpx;  
  margin-left: 10rpx;
}
.option-after{
  background-color:rgba(192, 207, 113, 0.5);
}




























